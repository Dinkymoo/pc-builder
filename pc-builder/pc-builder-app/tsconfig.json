{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "esModuleInterop": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "outDir": "./out-tsc/app",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true
  },
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "out-tsc"
  ]
}