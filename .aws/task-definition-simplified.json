{
  "family": "pc-builder-backend",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "pc-builder-backend",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.eu-west-3.amazonaws.com/pc-builder-repository:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "MY_AWS_REGION",
          "value": "eu-west-3"
        },
        {
          "name": "S3_BUCKET",
          "value": "pc-builder-bucket-dvg-2025"
        },
        {
          "name": "S3_CSV_KEY",
          "value": "graphics-cards.csv"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/pc-builder-backend",
          "awslogs-region": "eu-west-3",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512"
}
